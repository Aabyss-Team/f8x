        Porxy_Switch
        Base_Check
        tomcat6_Install
        ;;
    -tomcat7)
        Porxy_Switch
        Base_Check
        tomcat7_Install
        ;;
    -tomcat8)
        Porxy_Switch
        Base_Check
        tomcat8_Install
        ;;
    -tomcat9)
        Porxy_Switch
        Base_Check
        tomcat9_Install
        ;;
    -help | help)
        printf "\033c"
        Help_Info
        exit 1
        ;;
esac

echo -e "\033[1;36m \n-----OVER-----\n \033[0m"
